            function renderEvents() {
                var node = document.getElementById("event-interface");
                var email = document.getElementById("email").textContent;
                var currentUserID = parseInt(document.getElementById("current-user-id").textContent, 10);

                NBIntegration.eventInterface(node, email, currentUserID);
            }
        </script>

        <script async=true src="http://localhost:3000/embed/js?slug=skarger&callback=renderEvents"></script>
